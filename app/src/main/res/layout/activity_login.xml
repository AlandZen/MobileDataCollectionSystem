<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/login_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/login_account_text"
        android:id="@+id/txtAccount"
        android:textSize="@dimen/login_textview_font_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/login_textview_account_margin_top" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtTxtAccount"
        android:textSize="@dimen/login_textview_font_size"
        android:layout_marginLeft="@dimen/login_textview_margin_left"
        android:layout_alignBaseline="@+id/txtAccount"
        android:layout_toRightOf="@+id/txtAccount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/login_password_text"
        android:id="@+id/txtPassword"
        android:textSize="@dimen/login_textview_font_size"
        android:layout_below="@+id/txtAccount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/login_textview_password_margin_top" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edtTxtPassword"
        android:textSize="@dimen/login_textview_font_size"
        android:layout_marginLeft="@dimen/login_textview_margin_left"
        android:layout_alignBaseline="@+id/txtPassword"
        android:layout_toRightOf="@+id/txtPassword" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_remenber_text"
        android:id="@+id/chkRemenber"
        android:layout_marginTop="25dp"
        android:textSize="@dimen/login_textview_font_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtPassword" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_button_text"
        android:id="@+id/btnLogin"
        android:textSize="@dimen/login_textview_font_size"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/login_button_margin_bottom"
        android:onClick="loginButtonClick"/>
</RelativeLayout>